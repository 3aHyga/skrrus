WRITE_HEX	PROC
	PUSH	AX
	PUSH	DX
	PUSH	SI
	PUSH	DI
	PUSH	DS
	PUSH	ES
	MOV	AH,AL
	AND	AX,0FF0H
	SHR	AL,4
	ADD	AL,30H
	CMP	AL,39H
	JBE	WRITE_HEX1
	ADD	AL,7
WRITE_HEX1:
	ADD	AH,30H
	CMP	AH,39H
	JBE	WRITE_HEX2
	ADD	AH,7
WRITE_HEX2:
	PUSH	AX
	MOV	AX,0B800H
	MOV	ES,AX
	MOV	DS,AX
	MOV	AX,CS:[Y]
	MOV	DI,160
	MUL	DI
	MOV	DI,CS:[X]
	ROL	DI,1
	ADD	DI,AX
	MOV	SI,DI
	POP	DX
	LODSW
	MOV	AL,DL
	STOSW
	LODSW
	MOV	AL,DH
	STOSW
	MOV	SI,CS:[X]
	MOV	DI,CS:[Y]
	ADD	SI,2
	CMP	SI,CS:[END_X_]
	JNE	WRITE_SYM_1
	MOV	SI,CS:[BEGIN_X_]
	INC	DI
	CMP	DI,CS:[END_Y_]
	JNE	WRITE_SYM_1
	MOV	DI,CS:[BEGIN_Y_]
WRITE_SYM_1:
	MOV	CS:[X],SI
	MOV	CS:[Y],DI
	POP	ES
	POP	DS
	POP	DI
	POP	SI
	POP	DX
	POP	AX
	RET
X	DW	0
Y	DW	0
BEGIN_X_	DW	0
BEGIN_Y_	DW	0
END_X_	DW	80
END_Y_	DW	25
ENDP
